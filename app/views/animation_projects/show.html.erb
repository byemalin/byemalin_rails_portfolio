<main class="animationShow">

  <%= link_to "< Back", animation_projects_path%>

  <h3><%= @project.title %></h3>
   <p><%= @project.description %></p>

  <%= cl_image_tag @project.cover_photo.key %>


  <div class="videosContainer">
    <% @project.videos.each do |video| %>
      <% url = "https://player.cloudinary.com/embed/?cloud_name=dxvi2kqnz&public_id=production/#{video.key}"%>
      <%# url = "https://player.cloudinary.com/embed/?cloud_name=dxvi2kqnz&public_id=development/#{video.key}"%>
      <iframe
        src="<%= url %>"
        frameborder="0"
        allow="fullscreen">
      </iframe>
    <% end %>
  </div>

<%= link_to 'Edit', edit_animation_project_path(@project) %>


</main>
