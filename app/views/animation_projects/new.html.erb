<h1>New Animation Project</h1>

<%= form_with model: @animation_project, local: true do |form| %>
  <% if @animation_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animation_project.errors.count, "error") %> prevented this project from being saved:</h2>

      <ul>
      <% @animation_project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :sub_heading %>
    <%= form.text_field :sub_heading %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :rich_description, "Detailed Description" %><br>
    <%= form.rich_text_area :rich_description %>
  </div>

  <div class="field">
    <%= form.label :cover_photo, "Cover Photo (required)" %>
    <%= form.file_field :cover_photo, required: true, direct_upload: true %>
  </div>

  <div class="field">
    <%= form.label :videos, "Videos (optional)" %>
    <%= form.file_field :videos, multiple: true, direct_upload: true %>
  </div>

  <div class="field">
    <%= form.label :photos, "Other Photos (optional)" %>
    <%= form.file_field :photos, multiple: true, direct_upload: true %>
  </div>

  <div class="field">
    <%= form.label :tiktok_id %>
    <%= form.text_area :tiktok_id %>
  </div>

  <div class="actions">
    <%= form.submit "Create Project" %>
  </div>
<% end %>

<%= link_to 'Back to List', animation_projects_path %>
